@model Teacher
    <h2 class="display-4">Add New Teacher</h2>
    <br />
    @using (Html.BeginForm("CreateTeacher", "Home"))
    {
        <ejs-textbox id="FirstName" placeholder="First Name"></ejs-textbox>
        <ejs-textbox id="LastName" placeholder="Last Name"></ejs-textbox>
        <br />
        <ejs-button id="submit" content="Add Teacher"></ejs-button>
    }

    @section scripts {

        <script type="text/javascript">
            $(document).ready(function () {
                $('#submit').on('click', function (e) {
                    if ($('#FirstName').val() == '' || $('#LastName').val() == '') {
                        e.preventDefault();
                    } else {

                        var data = {
                            FirstName: $('#FirstName').val(),
                            LastName: $('#LastName').val()
                        };

                        let response = fetch('/home/AddTeacher', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json;charset=utf-8'
                            },
                            body: JSON.stringify(data)
                        });
                    }
                });
            });
        </script>
    }